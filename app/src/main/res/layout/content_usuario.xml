<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/degradado"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.monitor.osjelanji.activity_usuario"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/formulario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="FORMULARIO"
            android:textSize="18sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="NOMBRE:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/apellido"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="25dp"
                    android:text="APELLIDOS:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="EMAIL:"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/contraseña"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:text="CONTRASEÑA:"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <EditText
                    android:id="@+id/editNombre"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/borde"
                    android:ems="10"
                    android:hint="Nombre"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp"
                    android:selectAllOnFocus="false" />

                <EditText
                    android:id="@+id/editApellidos"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/borde"
                    android:ems="10"
                    android:hint="Apellidos"
                    android:inputType="textPersonName"
                    android:paddingLeft="10dp" />

                <EditText
                    android:id="@+id/editEmail"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/borde"
                    android:ems="10"
                    android:hint="Email"
                    android:inputType="textEmailAddress"
                    android:paddingLeft="10dp" />

                <EditText
                    android:id="@+id/editContraseña"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/borde"
                    android:ems="10"
                    android:hint="Contraseña"
                    android:inputType="textPassword"
                    android:paddingLeft="10dp" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/alergias"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="ALERGIAS/INTOLERANCIAS"
                android:textSize="18sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <CheckBox
                android:id="@+id/gluten"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gluten" />

            <CheckBox
                android:id="@+id/crustaceos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Crustáceos" />

            <CheckBox
                android:id="@+id/huevos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Huevos" />

            <CheckBox
                android:id="@+id/pescado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Pescado" />

            <CheckBox
                android:id="@+id/cacahuetes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cacahuetes" />

            <CheckBox
                android:id="@+id/soja"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Soja " />

            <CheckBox
                android:id="@+id/leche"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lacteos" />

            <CheckBox
                android:id="@+id/frutos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Frutos secos" />

            <CheckBox
                android:id="@+id/apio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Apio" />

            <CheckBox
                android:id="@+id/mostaza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Mostaza" />

            <CheckBox
                android:id="@+id/sesamo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sésamo" />

            <CheckBox
                android:id="@+id/azufre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sulfito" />

            <CheckBox
                android:id="@+id/altramuces"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Altramuz" />

            <CheckBox
                android:id="@+id/molusco"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Moluscos" />

            <CheckBox
                android:id="@+id/noAlergias"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sin alergias" />

            <Button
                android:id="@+id/enviar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="16dp"
                android:background="@android:color/holo_blue_light"
                android:text="ENVIAR"
                android:onClick="enviar"/>

        </LinearLayout>


    </ScrollView>

</LinearLayout>
